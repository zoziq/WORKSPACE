public class QueryOntologyFile {

	public static ArrayList<String> getService(String filePath, String modelPrefix, String modelUri, String column) throws FileNotFoundException, IOException {
		InputStream in = new FileInputStream(new File(filePath));

		Model model = ModelFactory.createOntologyModel();
		model.read(in,null);
		in.close();

		String queryString = 
			"PREFIX "+modelPrefix+": <"+modelUri+"> " +
			"SELECT ?y " +
			"WHERE {" +
			"      ?x "+modelPrefix+":"+column+" ?y . " +
			"      }";

		ArrayList<RDFNode> y = null;
		
		Query query = QueryFactory.create(queryString);

		QueryExecution qe = QueryExecutionFactory.create(query, model);
		ResultSet results = qe.execSelect();
		while (results.hasNext()) {
			QuerySolution s = results.next();
			y.add(s.get("y"));
		}
		qe.close();
		
		ArrayList<String> s = null;
		
		for (int i = 0; i < y.size(); i++) {
			s.add(y.get(i).toString());
		}
		
		return s;
	}
	
	public static void main(String[] args) throws IOException {
		
		getService("D:/Workspaces/Ontologies/ServiceMetaModel.owl","ServiceMetaModel","http://www.semanticweb.org/ontologies/2012/2/ServiceMetaModel.owl#","name");

		
